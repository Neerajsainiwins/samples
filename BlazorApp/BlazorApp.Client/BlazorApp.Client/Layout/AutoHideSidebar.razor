<div class="auto-hiding-nav-menu"
@onmouseover="ExpandNavMenu"
@onmouseout="CollapseNavMenu">
    <nav class="nav-menu @(collapseNavMenu ? "collapsed" : "expand")">
        <div>
            <NavLink class="nav-link" href="/admin/Dashboard" Match="NavLinkMatch.All">
                <span class="bi bi-house nav-item-icon" aria-hidden="true">
                    <span class="nav-item-text">Home</span>
                </span>
            </NavLink>
            <NavLink class="nav-link" href="/author/index" Match="NavLinkMatch.All">
                <span class="bi bi-people nav-item-icon">
                    <span class="nav-item-text"> Authors</span>
                </span>
            </NavLink>
            <NavLink class="nav-link" href="/book/index" Match="NavLinkMatch.All">
                <span class="bi bi-award nav-item-icon">
                    <span class="nav-item-text"> Books</span>
                </span>
            </NavLink>
        </div>
    </nav>
</div>

<style>
    .nav-link {
    margin-bottom: 10px;
    }

    .expand .nav-link {
    margin-bottom: 18px;
    }
</style>
@code {

        private bool collapseNavMenu = true;
        private bool isHovered = false;

        private void ExpandNavMenu()
        {
            isHovered = true;
            if (collapseNavMenu) collapseNavMenu = false;
        }

        private void CollapseNavMenu()
        {
            isHovered = false;
            if (!collapseNavMenu) collapseNavMenu = true;
        } 
  
}
